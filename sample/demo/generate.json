{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "properties": {
        "autoscaling": {
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "maxReplicas": {
                    "type": "integer"
                },
                "minReplicas": {
                    "type": "integer"
                }
            },
            "type": "object"
        },
        "hostAliases": {
            "items": {
                "properties": {
                    "hostnames": {
                        "items": {
                            "type": "string"
                        },
                        "type": "array"
                    },
                    "ip": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "type": "array"
        },
        "ingress": {
            "properties": {
                "configs": {
                    "items": {
                        "properties": {
                            "className": {
                                "type": "string"
                            },
                            "ingressName": {
                                "type": "string"
                            },
                            "rules": {
                                "items": {
                                    "properties": {
                                        "host": {
                                            "type": "string"
                                        },
                                        "http": {
                                            "properties": {
                                                "paths": {
                                                    "items": {
                                                        "properties": {
                                                            "backend": {
                                                                "properties": {
                                                                    "service": {
                                                                        "properties": {
                                                                            "name": {
                                                                                "type": "string"
                                                                            },
                                                                            "port": {
                                                                                "properties": {
                                                                                    "number": {
                                                                                        "type": "integer"
                                                                                    }
                                                                                },
                                                                                "type": "object"
                                                                            }
                                                                        },
                                                                        "type": "object"
                                                                    }
                                                                },
                                                                "type": "object"
                                                            },
                                                            "path": {
                                                                "type": "string"
                                                            },
                                                            "pathType": {
                                                                "type": "string"
                                                            }
                                                        },
                                                        "type": "object"
                                                    },
                                                    "type": "array"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                },
                                "type": "array"
                            }
                        },
                        "type": "object"
                    },
                    "type": "array"
                },
                "enabled": {
                    "type": "boolean"
                }
            },
            "type": "object"
        },
        "name": {
            "type": "string"
        },
        "replicas": {
            "type": "integer"
        },
        "resources": {
            "properties": {
                "limits": {
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "requests": {
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                }
            },
            "type": "object"
        },
        "version": {
            "type": "string"
        }
    },
    "type": "object"
}
